@model ContatoModel

@{
    ViewData["Title"] = "Cadastrar contato";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar contatos</h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post" asp-antiforgery="true">

    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" id="email" placeholder="Digite o e-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    
    <div class="mb-3">
        <label for="contato" class="form-label">Contato</label>
        <input type="text" asp-for="Contato" class="form-control" id="contato" placeholder="Digite o celular do contato">
        @Html.ValidationMessageFor(x => x.Contato)
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>